<div class="page-header">
 <h1>Actividades de la sucursal</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Enabled</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <div class="row">
    <% @activities.each do |activity| %>
      

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="..." alt="...">
      <div class="caption">
        <h3><%= activity.name %></h3>
        <p><%= activity.description %></p>
        <p>cupos disponibles :<%= activity.capacity %></p>
        <p><%= link_to 'Show', activity, class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_activity_path(activity), class: 'btn btn-primary' %>
        <%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></p>
      </div>
    </div>
  </div>



      
    <% end %>
    </div>
  </tbody>
</table>

