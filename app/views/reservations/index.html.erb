
<h1>Reservations</h1>


<table>
  <thead>
    <tr>
      <th>Fecha de Inicio</th>
      <th>Fecha de Termino</th>
      <th>Costo</th>
      <th>A cargo de</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.init_date %></td>
        <td><%= reservation.end_date %></td>
        <td><%= reservation.cost %></td>
        <td><%= reservation.user.name %></td>
        <td><%= link_to 'Show', subsidiary_ubication_reservation_path(params[:subsidiary_id],params[:ubication_id],reservation) %></td>
        <td><%= link_to 'Edit', edit_subsidiary_ubication_reservation_path(params[:subsidiary_id],params[:ubication_id],reservation) %></td>
        <td><%= link_to 'Destroy', subsidiary_ubication_reservation_path(params[:subsidiary_id],params[:ubication_id],reservation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

